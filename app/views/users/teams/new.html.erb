<h1>New team</h1>

<% form_for([:user,@team]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description,:size=>'30x6' %>
  </p>
  <p>选择如下用户，添加到team中</p>
  <%@users.each do |user|%>
    <%= check_box_tag  "user_ids[]",user.id%><%=user.login%>
    <br>
  <%end%>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_teams_path %>