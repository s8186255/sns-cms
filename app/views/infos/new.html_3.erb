<% form_for(:attachment, :url => { :action => "create" }, :html => { :multipart => true }) do |f| %>
  请选择录入的信息类型<br>
  <%for info_type in @info_types%>
    <input type="radio" name="<%= f.info_type_id%>" value="<%= info_type.id%>"  onclick ="<%= remote_function :url => { :action => :show_info_details,:info_type_id=>info_type.id } %>"><%= info_type.name %><%= info_type.id %>
  <%end%>
  <div id="info_details">
  </div>
  <%=  f.radio_button 0,checked=false %>不允许评论
  <%=  f.radio_button 1,checked=true %>允许评论<br>

  <%= submit_tag 'commit' %>
<% end %>